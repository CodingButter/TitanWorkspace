{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types", "./src/index.d.ts"
        ],
        "paths": {
            "@core/*": ["core/*"],
            "@systems/*": ["systems/*"],
            "@utils/*": ["utils/*"],
            "@components/*": ["components/*"]
        }
    },
    "include": ["./src/**/*"]
}
