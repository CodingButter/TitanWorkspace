{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@core/*": ["core/*"],
            "@systems/*": ["systems/*"],
            "@utiles/*": ["utiles/*"],
            "@components/*": ["components/*"]
        }
    },
    "include": ["./src/**/*"]
}
